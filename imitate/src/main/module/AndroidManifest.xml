<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.engineer.imitate">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 访问网络，网络定位需要上网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:name=".ImitateApplication"
        android:icon="@mipmap/kotlin"
        android:label="@string/app_name"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".activity.TestFrameLayout"
            android:theme="@style/MyAppTheme">
        </activity>
        <activity
            android:name=".activity.FakeJikeActivity"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".KotlinRootActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CustomScrollingActivity"
            android:label="@string/title_activity_custom_scrolling"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".activity.PureActivity"
            android:theme="@style/MyAppTheme" />
        <activity
            android:name=".activity.FinalActivity"
            android:label="@string/title_activity_final"
            android:theme="@style/MyAppTheme" />
    </application>

</manifest>