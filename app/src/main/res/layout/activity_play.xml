<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="home.smart.fly.animations.activity.PlayActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorPrimary"
        android:scaleType="fitXY"
        android:src="@drawable/cat"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            tools:text="11111"/>

        <TextView
            android:id="@+id/height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            tools:text="22222"/>


        <CheckBox
            android:id="@+id/negate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="isNegative"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <home.smart.fly.animations.customview.EasySeekBar
                android:id="@+id/scrollX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="scrollX"/>

            <home.smart.fly.animations.customview.EasySeekBar
                android:id="@+id/scrollY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="scrollY"/>

            <home.smart.fly.animations.customview.EasySeekBar
                android:id="@+id/translationX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="translationX"/>

            <home.smart.fly.animations.customview.EasySeekBar
                android:id="@+id/translationY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="translationY"/>

            <home.smart.fly.animations.customview.EasySeekBar
                android:id="@+id/translationZ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="translationZ"/>

            <home.smart.fly.animations.customview.EasySeekBar
                android:id="@+id/PivotX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="PivotX"/>

            <home.smart.fly.animations.customview.EasySeekBar
                android:id="@+id/PivotY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="PivotY"/>

            <home.smart.fly.animations.customview.EasySeekBar
                android:id="@+id/rotateX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="RotationX"/>

            <home.smart.fly.animations.customview.EasySeekBar
                android:id="@+id/rotateY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="RotationY"/>

            <home.smart.fly.animations.customview.EasySeekBar
                android:id="@+id/scaleX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="scaleX"/>

            <home.smart.fly.animations.customview.EasySeekBar
                android:id="@+id/scaleY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:label="scaleY"/>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
